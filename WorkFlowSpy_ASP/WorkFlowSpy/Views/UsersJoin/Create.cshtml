@model WorkFlowSpy.Models.EmployeeViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Employee</h4>
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.HolderCode, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HolderCode)
                    @Html.ValidationMessageFor(model => model.HolderCode)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName)
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName)
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
            </div>

            <!--div class="form-group">
                @Html.LabelFor(model => model.HiredDate, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HiredDate)
                    @Html.ValidationMessageFor(model => model.HiredDate)
                </div>
            </div-->

            <div class="form-group">
                @Html.LabelFor(model => model.Position, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Position)
                    @Html.ValidationMessageFor(model => model.Position)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Terminated, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Terminated)
                    @Html.ValidationMessageFor(model => model.Terminated)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IdentityId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdentityId, new SelectList(Model.IdentityInfo, "Key", "Value"), "None", htmlAttributes: new { @class = "btn btn-default dropdown-toggle", style = "width: 300px; " })
                    @Html.ValidationMessageFor(model => model.IdentityId)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
