<Window x:Name="HabitantDetailsWin" x:Class="HostelKing.HabitantDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Habitant details" Height="500" Width="500">
    <Grid>
        <Label Content="First name" HorizontalAlignment="Left" Margin="38,38,0,0" VerticalAlignment="Top"/>
        <Label Content="Last name" HorizontalAlignment="Left" Margin="38,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FirstName" Text="{Binding Path=FirstName}" HorizontalAlignment="Left" Height="23" Margin="118,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LastName" Text="{Binding Path=LastName}" HorizontalAlignment="Left" Height="23" Margin="118,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
