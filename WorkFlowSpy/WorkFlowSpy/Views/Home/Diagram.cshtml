@model JsonResult
@using System.Web.Script.Serialization

@{ string tasks = new JavaScriptSerializer().Serialize(Model.Data);}

@section additionalHeader {
    <script src="~/Scripts/dhtmlxgantt.js" type="text/javascript" charset="utf-8"></script>
    <link rel="stylesheet" href="~/Content/dhtmlxgantt/dhtmlxgantt_broadway.css" type="text/css" />
    <style type="text/css">
        html, body {
            height: 100%;
            padding: 0px;
            margin: 0px;
            overflow: hidden;
        }
    </style>
}

@section additionalBody {
    <div id="ganttContainer" style='width:100%; height:80%;'></div>
    <script src="~/Scripts/initGantt.js" type="text/javascript" charset="utf-8"></script>
    <script type="text/javascript">
        gantt.parse(@Html.Raw(tasks));
    </script>
}
    



