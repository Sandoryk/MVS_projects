@model IEnumerable<WorkFlowSpy.Models.EmployeeViewModel>


@{
    ViewBag.Title = "List";
}

<link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />

<h2>Users match table</h2>

<p>
    @Html.ActionLink("Create New", "Create", "UsersJoin", new { }, new { @class = "viewDialog", data_dialog_title = "Employee creation" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HolderCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HiredDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Terminated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentityId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentityFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentityLastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HolderCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HiredDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Terminated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdentityId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdentityFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdentityLastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "UsersJoin", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "Employee editing" }) |
            @Html.ActionLink("Delete", "Delete", "UsersJoin", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "Employee deletion" })
        </td>
    </tr>
}

</table>

@section scripts { 
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
    <script>
        $(document).ready(function () {

            $.ajaxSetup({ cache: false });

            var mydialog = $("<div></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .dialog({
                        autoOpen: false,
                        modal: true
                    });

            $(".viewDialog").on("click", function (e) {
                e.preventDefault();

                mydialog.empty();
                mydialog.load(this.href);
                mydialog.dialog({ title: $(this).attr("data-dialog-title") })
                mydialog.dialog('open');

                /*$("<div></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .dialog({
                        title: $(this).attr("data-dialog-title"),
                        close: function () { $(this).remove() },
                        modal: true
                    })
                    .load(this.href);*/
            });
            $(".close").on("click", function (e) {
                e.preventDefault();
                $(this).closest(".dialog").dialog("close");
            });
        });
    </script>
 }
